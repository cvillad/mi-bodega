<tr class="nested-fields" data-new-record=<%= f.object.new_record? %>>
  <td class="pl-0"> 
    <%= f.text_field :description, placeholder: "Description", class: "form-control" %>
  </td>
  <td> 
    <div class="custom-file">
      <%= f.file_field :image, class: "custom-file-input", placeholder: "image" %>
      <label class="custom-file-label" for="image">Choose image file</label>
    </div>
  </td>
  <td>
    <%= link_to "Delete", "", data: { action: "item-form#remove_association" }, class: "btn btn-outline-danger btn-sm" %>
    <%= f.hidden_field :_destroy %>
  </td>
</tr>