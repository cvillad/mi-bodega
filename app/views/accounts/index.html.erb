<h3 class="text-center mb-3">Choose an account</h3>

<table class="table table-bordered">
  <tbody>
    <% @accounts.each do |account| %>
        <tr>
          <td><%= link_to "#{account.name} (#{account.plan} plan)", "#{change_subdomain(@url, @subdomain, account.subdomain)}/boxes" %></td>
        </tr>
    <% end %>
  </tbody>
</table>

