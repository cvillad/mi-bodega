<h1 class="text-center mb-3">Invite a user</h1>
<%= form_with(model: @user, url: members_path, method: :post) do |form| %>
  <%<% if @user.errors.any? %>
    <%= render "users/shared/error_messages", resource: @user %>
  <% end %>%>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Invite user", class: "btn btn-primary" %>
  </div>
<% end %>