<% flash.each do |name, msg| %> 
  <div class="alert mb-3 text-<%= name=="notice" ? "success" : "danger" %>
  alert-<%= name=="notice" ? "success" : "danger" %> alert-dismissible fade show bordered" role="alert">
    <%= msg %> 
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>